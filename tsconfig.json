{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2015",
        "moduleResolution": "node",
        "diagnostics": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "skipDefaultLibCheck": true,
        "types": [ "requirejs" ],
        "lib": [
          "es5",
          "es2015",
          "dom",
          "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}